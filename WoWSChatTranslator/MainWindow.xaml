<Window x:Class="WoWSChatTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoWSChatTranslator"
        mc:Ignorable="d"
        Title="WoWS Chat Translator" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBox Name="InputTextBox" Height="30" Margin="0,0,0,10" />
            <Button Name="TranslateButton" Content="翻訳" Height="30" Click="TranslateButton_Click" />
            <TextBlock Name="OutputTextBlock" Text="翻訳結果がここに表示されます" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
